{% extends 'base.html.twig' %}

{% block title %}Modifier : {{ category.name }}{% endblock %}

{% block body %}
<nav aria-label="Fil d'Ariane" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_category_index') }}">Catégories</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_category_show', { id: category.id }) }}">{{ category.name }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Modifier</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-blog">
            <div class="card-header bg-warning text-dark py-3">
                <h1 class="h5 fw-bold mb-0"><i class="bi bi-pencil-square me-2"></i>Modifier la catégorie</h1>
            </div>
            <div class="card-body p-4 p-md-5">
                {{ include('category/_form.html.twig', { button_label: 'Enregistrer' }) }}
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="card-footer bg-light border-top py-3">
                <div class="border border-danger rounded p-3 bg-danger bg-opacity-10">
                    <h3 class="h6 fw-bold text-danger mb-2"><i class="bi bi-exclamation-triangle me-2"></i>Zone de danger</h3>
                    {{ include('category/_delete_form.html.twig') }}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

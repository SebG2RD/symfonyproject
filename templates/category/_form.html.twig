{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="mb-3">
        {{ form_label(form.name, null, { label_attr: { class: 'form-label fw-semibold' } }) }}
        {{ form_widget(form.name, { attr: { class: 'form-control', placeholder: 'Ex. Technologie, Voyage…' } }) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="mb-4">
        {{ form_label(form.description, null, { label_attr: { class: 'form-label fw-semibold' } }) }}
        {{ form_widget(form.description, { attr: { class: 'form-control', rows: 4, placeholder: 'Description optionnelle…' } }) }}
        {{ form_errors(form.description) }}
    </div>
    <hr class="my-4">
    <div class="d-flex gap-2 flex-wrap">
        <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i> {{ button_label|default('Créer') }}</button>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">Annuler</a>
    </div>
{{ form_end(form) }}

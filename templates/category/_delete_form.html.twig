<form method="post" action="{{ path('app_category_delete', { id: category.id }) }}" onsubmit="return confirm('Supprimer définitivement cette catégorie ? Cette action est irréversible.');" class="mb-0">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash me-1"></i> Supprimer cette catégorie</button>
</form>

{# Macro pour un bouton Voir #}
{% macro btnView(route, params = {}, text = 'Voir', size = 'sm') %}
    <a href="{{ path(route, params) }}" class="btn btn-{{ size }} btn-outline-primary" title="{{ text }}">
        <i class="bi bi-eye"></i> {{ text }}
    </a>
{% endmacro %}

{# Macro pour un bouton Éditer #}
{% macro btnEdit(route, params = {}, text = 'Éditer', size = 'sm') %}
    <a href="{{ path(route, params) }}" class="btn btn-{{ size }} btn-outline-warning" title="{{ text }}">
        <i class="bi bi-pencil"></i> {{ text }}
    </a>
{% endmacro %}

{# Macro pour un bouton Supprimer #}
{% macro btnDelete(route, params = {}, text = 'Supprimer', size = 'sm', confirmMessage = 'Êtes-vous sûr?') %}
    <form action="{{ path(route, params) }}" method="POST" style="display:inline;">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-{{ size }} btn-outline-danger" title="{{ text }}" onclick="return confirm('{{ confirmMessage }}')">
            <i class="bi bi-trash"></i> {{ text }}
        </button>
    </form>
{% endmacro %}

{# Macro pour un bouton Créer #}
{% macro btnCreate(route, params = {}, text = 'Créer', size = 'lg', icon = 'plus-circle') %}
    <a href="{{ path(route, params) }}" class="btn btn-{{ size }} btn-success" title="{{ text }}">

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8 col-lg-5 col-xl-4">
        <div class="card card-blog">
            <div class="card-header bg-primary text-white py-3 text-center">
                <h1 class="h5 fw-bold mb-0"><i class="bi bi-box-arrow-in-right me-2"></i>Connexion</h1>
            </div>
            <div class="card-body p-4 p-md-5">
                {% if error %}
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                {# Désactive Turbo pour ce formulaire : évite "Invalid CSRF token" (Turbo peut modifier/cacher le jeton) #}
                <form method="post" action="{{ path('app_login') }}" data-turbo="false">
                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Adresse e-mail</label>
                        <input type="email" name="email" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus placeholder="vous@exemple.fr">
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="••••••••">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary w-100 py-2" type="submit">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                    </button>
                </form>

                <p class="text-center text-muted small mt-4 mb-0">
                    Pas encore de compte ? <a href="{{ path('app_register') }}" class="text-primary text-decoration-none fw-medium">S'inscrire</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<nav aria-label="Fil d'Ariane" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item active" aria-current="page">Administration · Utilisateurs</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
    <h1 class="page-title mb-0"><i class="bi bi-people me-2"></i>Utilisateurs inscrits</h1>
    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i> Retour</a>
</div>

{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
{% endfor %}
{% for message in app.flashes('warning') %}
    <div class="alert alert-warning alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
{% endfor %}

<div class="card card-blog overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="border-0 py-3">Id</th>
                    <th class="border-0 py-3">Email</th>
                    <th class="border-0 py-3">Nom</th>
                    <th class="border-0 py-3">Prénom</th>
                    <th class="border-0 py-3">Rôles</th>
                    <th class="border-0 py-3">Inscrit le</th>
                    <th class="border-0 py-3">Statut</th>
                    <th class="border-0 py-3 text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="py-3">{{ user.id }}</td>
                        <td class="py-3"><span class="text-break">{{ user.email }}</span></td>
                        <td class="py-3">{{ user.lastName }}</td>
                        <td class="py-3">{{ user.firstName }}</td>
                        <td class="py-3">
                            {% for role in user.roles %}
                                <span class="badge bg-secondary rounded-pill me-1">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td class="py-3 small text-muted">{{ user.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="py-3">
                            {% if user.isActive %}
                                <span class="badge bg-success rounded-pill">Actif</span>
                            {% else %}
                                <span class="badge bg-danger rounded-pill">Désactivé</span>
                            {% endif %}
                        </td>
                        <td class="py-3 text-end">
                            <a href="{{ path('admin_users_edit', { id: user.id }) }}" class="btn btn-sm btn-outline-primary me-1" title="Éditer">
                                <i class="bi bi-pencil"></i> Éditer
                            </a>
                            {% if user.id != app.user.id %}
                                <form action="{{ path('admin_users_toggle_active', { id: user.id }) }}" method="post" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_user_' ~ user.id) }}">
                                    {% if user.isActive %}
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Désactiver ce compte ? L\'utilisateur ne pourra plus se connecter.');">
                                            <i class="bi bi-x-circle me-1"></i> Désactiver
                                        </button>
                                    {% else %}
                                        <button type="submit" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-circle me-1"></i> Activer
                                        </button>
                                    {% endif %}
                                </form>
                            {% else %}
                                <span class="text-muted small">(vous)</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted py-5">
                            <i class="bi bi-people d-block mb-2" style="font-size: 2rem;"></i>
                            Aucun utilisateur inscrit.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
<div class="container mt-5">
    <nav aria-label="Fil d'Ariane" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">Gestion des commentaires</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-chat-left-text me-2"></i>Commentaires</h1>
        <span class="badge bg-secondary">{{ total }} au total</span>
    </div>

    {% if comments is empty %}
        <div class="alert alert-info" role="alert">
            Aucun commentaire trouvé.
        </div>
    {% else %}
        <div>
            <table class="table table-hover align-middle w-100">
                <thead class="table-light">
                    <tr>
                        <th>Auteur</th>
                        <th>Contenu</th>
                        <th>Article</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for comment in comments %}
                        <tr>
                            <td>
                                <strong>{{ comment.author.firstName }} {{ comment.author.lastName }}</strong>
                                <br/>
                                <small class="text-muted">{{ comment.author.email }}</small>
                            </td>
                            <td class="text-wrap">
                                <p class="mb-0" title="{{ comment.content }}">
                                    {{ comment.content[:100] }}{% if comment.content|length > 100 %}...{% endif %}
                                </p>
                            </td>
                            <td class="text-wrap">
                                <a href="{{ path('show_post', { id: comment.post.id }) }}" target="_blank">
                                    {{ comment.post.title[:60] }}{% if comment.post.title|length > 60 %}...{% endif %}
                                </a>
                            </td>
                            <td>
                                <small class="text-muted">
                                    {{ comment.createdAt|date('d/m/Y H:i') }}
                                </small>
                            </td>
                            <td>
                                {% if comment.status == 'approved' %}
                                    <span class="badge bg-success">Approuve</span>
                                {% elseif comment.status == 'rejected' %}
                                    <span class="badge bg-danger">Rejete</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group" aria-label="Actions commentaire">
                                    <a href="{{ path('admin_comments_show', { id: comment.id }) }}" class="btn btn-info btn-icon" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    {% if comment.status != 'approved' %}
                                        <form method="POST" action="{{ path('admin_comments_approve', { id: comment.id }) }}" class="d-inline" onsubmit="return confirm('Approuver ce commentaire ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve_comment_' ~ comment.id) }}">
                                            <button type="submit" class="btn btn-success btn-icon" title="Approuver">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    {% if comment.status != 'rejected' %}
                                        <form method="POST" action="{{ path('admin_comments_reject', { id: comment.id }) }}" class="d-inline" onsubmit="return confirm('Rejeter ce commentaire ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('reject_comment_' ~ comment.id) }}">
                                            <button type="submit" class="btn btn-warning btn-icon" title="Rejeter">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form method="POST" action="{{ path('admin_comments_delete', { id: comment.id }) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_comment_' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-danger btn-icon" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav aria-label="Pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('admin_comments_index', { page: currentPage - 1 }) }}">Précédent</a>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        {% if page == currentPage %}
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">{{ page }}</span>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('admin_comments_index', { page: page }) }}">{{ page }}</a>
                            </li>
                        {% endif %}
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('admin_comments_index', { page: currentPage + 1 }) }}">Suivant</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}
    {% endif %}
</div>
{% endblock %}
